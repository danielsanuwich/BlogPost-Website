<% include ./partials/header %>

<h1>Compose</h1>

<form action="/compose" method="POST">
  <div class="form-group">
    <label> Title </label>
    <input
      class="form-control input-lg"
      type="text"
      name="postTitle"
      autofocus="on"
      required />
    <label> Post </label>
    <textarea
      class="form-control input-lg"
      cols="80"
      rows="8"
      placeholder="input"
      name="postBody"
      required></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<% include ./partials/footer %>
